pipeline {
	    agent any
	

	    stages {
	   	stage('install') {
            		steps {
                		sh "mvn install -f ASE_Junit"
            		}
        	}

	        stage('Build') {
	            steps {
	                git ' https://github.com/bhargavs09/ASE_Junit.git'
	                //sh './mvnw clean compile'
	                // bat '.\\mvnw clean compile'
	            }
	        }
		
	        stage('Test') {
	            steps {
	                sh 'mvn test -f ASE_Junit/src/trigonometric_taylor_series/Trigonometric_Functions_Test.java'
	                // bat '.\\mvnw test'
	            }
	

	            post {
	                always {
				junit allowEmptyResults: true, testResults: '**/test-results/*.xml'
	                    //junit '**/target/reports/TEST-*.xml'
	                }
	            }
	        }
	    }
	}
