pipeline {
	    agent any
	

	    stages {
	    	stage('checkout'){
			steps{
				git 'https://github.com/bhargavs09/ASE_Junit.git'
			}
 		}
		stage('install maven'){
		steps{
			sh label: '', script: 'sudo apt install maven -y'
			}
 		}
		stage('maven package'){
		steps{
			sh label: '', script: 'mvn package'
			}
		}
	        //stage('Build') {
	            //steps {
	               // git ' https://github.com/bhargavs09/ASE_Junit.git'
	                //sh './mvnw clean compile'
	                // bat '.\\mvnw clean compile'
	            //}
	       // }
	        stage('Test') {
	            steps {
	                sh './mvnw test ASE_Junit/src/trigonometric_taylor_series/Trigonometric_Functions_Test.java'
	                // bat '.\\mvnw test'
	            }
	

	            post {
	                always {
	                    junit '**/target/surefire-reports/TEST-*.xml'
	                }
	            }
	        }
	    }
	}
